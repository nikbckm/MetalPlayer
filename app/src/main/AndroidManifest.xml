<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.metalplayer">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HeavyMetalActivity"
            android:label="Heavy Metal">
        </activity>
        <activity
            android:name=".MetalcoreActivity"
            android:label="Metalcore"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".SwedishActivity"
            android:label="Swedish Death Metal"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".MusicPlayer"
            android:label="Music Player">
        </activity>
    </application>

</manifest>